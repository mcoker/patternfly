{{#if inline-edit-action-cancel--IsIcon}}
  {{#> inline-edit-action}}
    {{> button button--IsPlain=true button--attribute='aria-label="Cancel edits"' button--IsIcon=true button--icon="rh-microns-close"}}
  {{/inline-edit-action}}
{{else}}
  {{#> inline-edit-action}}
    {{#> button button--IsSecondary=true}}
      Cancel
    {{/button}}
  {{/inline-edit-action}}
{{/if}}
